<h1>My Tasks</h1>

<div>
  <% @tasks.each do |task| %>
    <h2><%= task.completed ? '✅' : '❌'%> <%= link_to task.title, task_path(task) %></h2>
    <p><%= link_to "Edit Task", edit_task_path(task) %></p>
    <h5 id="delete"><%= link_to "Delete #{task.title}",
              task_path(task),
              method: :delete,
              data: { confirm: "Are you sure?" } %></h5>
  <% end %>
</div>
<h3><%= link_to "Create a new Task", new_task_path %></h3>
